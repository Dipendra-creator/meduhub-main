# Local Development Environment Variables
# Copy this to .env for local development

# MongoDB Connection (use Atlas or local MongoDB)
MONGODB_URI=mongodb+srv://your-username:your-password@cluster.mongodb.net/meduhub?retryWrites=true&w=majority

# OR for local development:
# MONGODB_URI=mongodb://localhost:27017/meduhub

# Frontend URL for CORS (local development)
FRONTEND_URL=http://localhost:5173

# Server Port (only used in local development, not on Vercel)
PORT=5000

# Node Environment
NODE_ENV=development
